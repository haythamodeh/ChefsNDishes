@model Chef
<div>
    <a class="btn btn-primary" style="float:left;" href="/">Home</a>
    <h2 class="text-center">Add a Chef</h2>
</div>
<hr>
<div class="col-md-6">
    <form asp-action="CreateChef" method="post">
        <div class="form-group">
            <span class="text-danger" asp-validation-for="FirstName"></span>
            <label for="">First Name</label>
            <input class="form-control"  type="text" asp-for="FirstName">
        </div>
        <div class="form-group">
            <span class="text-danger" asp-validation-for="LastName"></span>
            <label for="">Last Name</label>
            <input class="form-control" type="text" asp-for="LastName">
        </div>
        <div class="form-group">
            <span class="text-danger" asp-validation-for="DateOfBirth"></span>
            <label for="">Date Of Birth</label>
            <input class="form-control" type="date" asp-for="DateOfBirth">
        </div>
        <button class="btn btn-success">Add Chef</button>
    </form>
</div>